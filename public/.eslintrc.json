{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            0,
            "never"
        ],
        "no-unexpected-multiline": 2,
        "no-console": 0,
        "quotes": [2, "single", "avoid-escape"],
        "strict": [2, "function"],
        "object-shorthand": [2, "always"],
        "no-var": 2,
        "prefer-const": 2,
        "prefer-arrow-callback": 2,
        "constructor-super": 2,
        "no-this-before-super": 2,
        "no-arrow-condition": 2
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true,
        "blockBindings": true,
        "modules": true
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "jQuery": true,
        "$": true,
        "React": true,
        "ReactDOM": true
    }
}
