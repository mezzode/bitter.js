{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            0,
            "never"
        ],
        "no-unexpected-multiline": 2,
        "no-console": 0,
        "quotes": [2, "single", "avoid-escape"]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "jQuery": true,
        "$": true,
        "React": true,
        "ReactDOM": true
    }
}
